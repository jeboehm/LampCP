<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jboehm_lampcp_config.configservice.class">Jboehm\Lampcp\ConfigBundle\Service\ConfigService</parameter>
    </parameters>

    <services>
        <service id="config" class="%jboehm_lampcp_config.configservice.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="logger" />
            <argument type="service" id="jboehm_lampcp_core.cryptservice" />
        </service>
    </services>
</container>
