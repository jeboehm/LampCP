<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jboehm_lampcp_apache_config.vhostbuilderservice.class">Jboehm\Lampcp\ApacheConfigBundle\Service\VhostBuilderService</parameter>
        <parameter key="jboehm_lampcp_apache_config.directorybuilderservice.class">Jboehm\Lampcp\ApacheConfigBundle\Service\DirectoryBuilderService</parameter>
    </parameters>

    <services>
        <service id="jboehm_lampcp_apache_config_vhostbuilder" class="%jboehm_lampcp_apache_config.vhostbuilderservice.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="jboehm_lampcp_core.systemconfigservice" />
            <argument type="service" id="logger" />
        </service>

        <service id="jboehm_lampcp_apache_config_directorybuilder" class="%jboehm_lampcp_apache_config.directorybuilderservice.class%">
            <argument type="service" id="templating" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="jboehm_lampcp_core.systemconfigservice" />
            <argument type="service" id="logger" />
        </service>
    </services>

