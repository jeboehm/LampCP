{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "title.page.mailaddress"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <th>{{ "jboehm.lampcp.corebundle.mailaddresstype.address"|trans() }}</th>
            <th>{{ "jboehm.lampcp.corebundle.mailaddresstype.hasCatchAll"|trans() }}</th>
            <th>{{ "all.column.actions"|trans() }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('config_mailaddress_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.address }}</td>
                <td>{{ entity.hasCatchAll }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('config_mailaddress_show', { 'id': entity.id }) }}">{{ "button.show"|trans() }}</a>
                        </li>
                        <li>
                            <a href="{{ path('config_mailaddress_edit', { 'id': entity.id }) }}">{{ "button.edit"|trans() }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('config_mailaddress_new', { 'mailaccountid': mailaccount.id }) }}">
        {{ "button.create"|trans() }}
    </a>
{% endblock %}