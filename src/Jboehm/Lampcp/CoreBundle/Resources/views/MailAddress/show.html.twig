{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.mailaddress"|trans() }}</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "mailaddress.column.address"|trans() }}</th>
            <td>{{ entity.address }}</td>
        </tr>
        <tr>
            <th>{{ "mailaddress.column.hascatchall"|trans() }}</th>
            <td>{{ entity.hasCatchAll }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a href="{{ path('config_mailaddress', { 'mailaccountid': entity.mailaccount.id }) }}">
                {{ "button.back"|trans() }}
            </a>
        </li>
        <li>
            <a href="{{ path('config_mailaddress_edit', { 'id': entity.id }) }}">
                {{ "button.edit"|trans() }}
            </a>
        </li>
        <li>
            <form action="{{ path('config_mailaddress_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">{{ "button.delete"|trans() }}</button>
            </form>
        </li>
    </ul>
{% endblock %}