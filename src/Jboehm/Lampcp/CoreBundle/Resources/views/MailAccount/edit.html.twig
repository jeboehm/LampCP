{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "edit.page.mailaccount"|trans() }}</h1>

    <form action="{{ path('config_mailaccount_update', { 'id': entity.id }) }}"
          method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">{{ "button.edit"|trans() }}</button>
        </p>
    </form>

    <ul class="record_actions">
        <li>
            <a href="{{ path('config_mailaccount') }}">
                {{ "button.back"|trans() }}
            </a>
        </li>
        <li>
            <form action="{{ path('config_mailaccount_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button type="submit">{{ "button.delete"|trans() }}</button>
            </form>
        </li>
    </ul>
{% endblock %}