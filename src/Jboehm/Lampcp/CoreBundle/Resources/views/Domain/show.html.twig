{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.domain"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.domain"|trans() }}</th>
            <td>{{ entity.domain }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.path"|trans() }}</th>
            <td>{{ entity.path }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.webroot"|trans() }}</th>
            <td>{{ entity.webroot }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.user"|trans() }}</th>
            <td>{{ entity.user.name }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.customconfig"|trans() }}</th>
            <td>
                <pre>{{ entity.customconfig }}</pre>
            </td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.count.subdomain"|trans() }}</th>
            <td>{{ entity.subdomain|length }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.count.mailaccount"|trans() }}</th>
            <td>{{ entity.mailaccount|length }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.count.mailaddress"|trans() }}</th>
            <td>{{ entity.mailaddress|length }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.count.mysqldatabase"|trans() }}</th>
            <td>{{ entity.mysqldatabase|length }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.count.pathoption"|trans() }}</th>
            <td>{{ entity.pathoption|length }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.count.protection"|trans() }}</th>
            <td>{{ entity.protection|length }}</td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <form action="{{ path('config_domain_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}

            <a class="btn" href="{{ path('config_domain') }}">
                {{ "button.back"|trans() }}
            </a>

            <a class="btn btn-warning" href="{{ path('config_domain_edit', { 'id': entity.id }) }}">
                {{ "button.edit"|trans() }}
            </a>

            <button class="btn btn-danger" type="submit">{{ "button.delete"|trans() }}</button>
        </form>
    </div>
{% endblock %}