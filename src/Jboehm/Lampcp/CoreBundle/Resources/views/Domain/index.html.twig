{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "title.page.domain"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.domain"|trans() }}</th>
            <th>{{ "jboehm.lampcp.corebundle.domaintype.path"|trans() }}</th>
            <th>{{ "all.column.actions"|trans() }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('config_domain_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.domain }}</td>
                <td>{{ entity.path }}</td>
                <td>
                    <a class="btn btn-info btn-mini"
                       href="{{ path('config_domain_show', { 'id': entity.id }) }}">{{ "button.show"|trans() }}</a>
                    <a class="btn btn-warning btn-mini"
                       href="{{ path('config_domain_edit', { 'id': entity.id }) }}">{{ "button.edit"|trans() }}</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('config_domain_new') }}">
        {{ "button.create"|trans() }}
    </a>
{% endblock %}