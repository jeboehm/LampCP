{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "title.page.domain"|trans() }}</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <th>{{ "domain.column.domain"|trans() }}</th>
            <th>{{ "domain.column.hasweb"|trans() }}</th>
            <th>{{ "domain.column.hasmail"|trans() }}</th>
            <th>{{ "domain.column.hasssh"|trans() }}</th>
            <th>{{ "domain.column.gid"|trans() }}</th>
            <th>{{ "domain.column.path"|trans() }}</th>
            <th>{{ "all.column.actions"|trans() }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('config_domain_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.domain }}</td>
                <td>{{ entity.hasWeb }}</td>
                <td>{{ entity.hasMail }}</td>
                <td>{{ entity.hasSSH }}</td>
                <td>{{ entity.gid }}</td>
                <td>{{ entity.path }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('config_domain_show', { 'id': entity.id }) }}">{{ "button.show"|trans() }}</a>
                        </li>
                        <li>
                            <a href="{{ path('config_domain_edit', { 'id': entity.id }) }}">{{ "button.edit"|trans() }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('config_domain_new') }}">
                {{ "button.create"|trans() }}
            </a>
        </li>
    </ul>
{% endblock %}