{% extends '::base.html.twig' %}

{% block title %}
    {% spaceless %}
        {{ "LampCP - Server Control Panel"|trans() }}
    {% endspaceless %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    '@JboehmLampcpCoreBundle/Resources/public/bootstrap/css/bootstrap.min.css'
    '@JboehmLampcpCoreBundle/Resources/public/css/main.css'
    filter='?yui_css' %}

    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@SonatajQueryBundle/Resources/public/jquery-1.8.0.js'
    filter='?yui_js' %}

    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    {% block navigation %}
        <ul>
            <li><a href="{{ path('status') }}">Startseite</a></li>
            <li><a href="{{ path('config_admin') }}">Administratoren</a></li>
            <li><a href="{{ path('config_domain') }}">Domains</a></li>

            {% if selecteddomain is defined and selecteddomain is not null %}
                <li><a href="{{ path('config_subdomain') }}">Subdomains</a></li>
                <li><a href="{{ path('config_mailaccount') }}">E-Mail Accounts</a></li>
                <li><a href="{{ path('config_mysqldatabase') }}">Datenbanken</a></li>
                <li><a href="{{ path('config_pathoption') }}">Pfadoptionen</a></li>
                <li><a href="{{ path('config_protection') }}">Gesch√ºtzte Verzeichnisse</a></li>
            {% endif %}
        </ul>
    {% endblock %}

    {% block domainselector %}
    {% endblock %}

    {% block selecteddomain %}
        {% if selecteddomain is defined and selecteddomain is not null %}
            Domain: {{ selecteddomain.domain }}
        {% endif %}
    {% endblock %}

    {% block content %}
    {% endblock %}
{% endblock %}