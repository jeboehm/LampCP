{% extends '::base.html.twig' %}

{% block title %}
    {% spaceless %}
        {{ "LampCP - Server Control Panel"|trans() }}
    {% endspaceless %}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets 'bundles/jboehmlampcpcore/bootstrap/css/bootstrap.min.css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}

    {% stylesheets 'bundles/jboehmlampcpcore/css/main.css' filter='cssrewrite,?yui_css' %}
    <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@SonatajQueryBundle/Resources/public/jquery-1.8.0.js'
    '@JboehmLampcpCoreBundle/Resources/public/bootstrap/js/bootstrap.min.js'
    '@JboehmLampcpCoreBundle/Resources/public/js/*'
    filter='?yui_js' %}

    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    {% block navigation %}
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <div class="nav-collapse">
                        <ul class="pull-right">
                            <div class="btn-group">
                                {% block domainselector %}
                                {% endblock %}
                            </div>
                        </ul>

                        <ul id="topnav" class="nav">
                            <li><a href="{{ path('status') }}">Startseite</a></li>
                            <li><a href="{{ path('config_admin') }}">Administratoren</a></li>
                            <li><a href="{{ path('config_domain') }}">Domains</a></li>

                            {% if selecteddomain is defined and selecteddomain is not null %}
                                <li class="divider-vertical"></li>
                                <li><a href="{{ path('config_subdomain') }}">Subdomains</a></li>
                                <li><a href="{{ path('config_mailaccount') }}">E-Mail Accounts</a></li>
                                <li><a href="{{ path('config_mysqldatabase') }}">Datenbanken</a></li>
                                <li><a href="{{ path('config_pathoption') }}">Pfadoptionen</a></li>
                                <li><a href="{{ path('config_protection') }}">Gesch√ºtzte Verzeichnisse</a></li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    {% endblock %}

    <div class="container">
        <div class="content">
            {% block content %}
            {% endblock %}
        </div>

        <footer>
            {% block footer %}
                <a href="http://lampcp.de">LampCP</a>
            {% endblock %}
        </footer>
    </div>
{% endblock %}