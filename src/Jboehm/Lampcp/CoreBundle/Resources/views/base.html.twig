{% extends '::base.html.twig' %}

{% block title %}{% spaceless %}{{ "title.head"|trans() }}{% endspaceless %}{% endblock %}

{% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="description" content=""/>
    <meta name="author" content=""/>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    'bundles/jboehmlampcpcore/bootstrap/css/bootstrap.css'
    'bundles/jboehmlampcpcore/bootstrap/css/bootstrap-responsive.css'
    'bundles/jboehmlampcpcore/css/main.css'
    filter='cssrewrite,?yui_css' %}

    <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
    {% endstylesheets %}
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts
    '@SonatajQueryBundle/Resources/public/jquery-1.8.0.js'
    '@JboehmLampcpCoreBundle/Resources/public/bootstrap/js/bootstrap.js'
    '@JboehmLampcpCoreBundle/Resources/public/js/*'
    filter='?yui_js' %}

    <script src="{{ asset_url }}" type="text/javascript"></script>
    {% endjavascripts %}
{% endblock %}

{% block body %}
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="{{ path("default") }}">{{ "title.head"|trans() }}</a>

                <div class="nav-collapse collapse">
                    <p class="navbar-text pull-right">
                        {% block topnavright %}{% spaceless %}{% endspaceless %}{% endblock %}
                    </p>
                    {% block topnav %}
                        <ul class="nav">
                            <li class="active"><a href="#">Home</a></li>
                            <li><a href="#about">About</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    {% endblock %}
                </div>
                <!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row-fluid">
            <div class="span3">
                <div class="well sidebar-nav">
                    {% block leftnav %}
                        <ul class="nav nav-list">
                            <li class="nav-header">Sidebar</li>
                            <li class="active"><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li><a href="#">Link</a></li>
                            <li class="nav-header">Sidebar</li>
                            <li><a href="#">Link</a></li>
