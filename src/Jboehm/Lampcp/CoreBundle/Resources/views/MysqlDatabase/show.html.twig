{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.mysqldatabase"|trans() }}</h1>

    <table class="record_properties">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "mysqldatabase.column.name"|trans() }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ "mysqldatabase.column.comment"|trans() }}</th>
            <td>{{ entity.comment }}</td>
        </tr>
        </tbody>
    </table>

    <ul class="record_actions">
        <li>
            <a class="btn" href="{{ path('config_mysqldatabase') }}">
                {{ "button.back"|trans() }}
            </a>
        </li>
        <li>
            <a class="btn" href="{{ path('config_mysqldatabase_edit', { 'id': entity.id }) }}">
                {{ "button.edit"|trans() }}
            </a>
        </li>
        <li>
            <form action="{{ path('config_mysqldatabase_delete', { 'id': entity.id }) }}" method="post">
                {{ form_widget(delete_form) }}
                <button class="btn btn-danger" type="submit">{{ "button.delete"|trans() }}</button>
            </form>
        </li>
    </ul>
{% endblock %}