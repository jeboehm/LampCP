{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "title.page.mysqldatabase"|trans() }}</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <th>{{ "mysqldatabase.column.name"|trans() }}</th>
            <th>{{ "mysqldatabase.column.comment"|trans() }}</th>
            <th>{{ "mysqldatabase.column.password"|trans() }}</th>
            <th>{{ "all.column.actions"|trans() }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('config_mysqldatabase_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.comment }}</td>
                <td>{{ entity.password }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('config_mysqldatabase_show', { 'id': entity.id }) }}">{{ "button.show"|trans() }}</a>
                        </li>
                        <li>
                            <a href="{{ path('config_mysqldatabase_edit', { 'id': entity.id }) }}">{{ "button.edit"|trans() }}</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('config_mysqldatabase_new') }}">
                {{ "button.create"|trans() }}
            </a>
        </li>
    </ul>
{% endblock %}