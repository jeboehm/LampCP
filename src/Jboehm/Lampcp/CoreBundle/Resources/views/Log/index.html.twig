{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "title.page.log"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <th>{{ "jboehm.lampcp.corebundle.logtype.time"|trans() }}</th>
            <th>{{ "jboehm.lampcp.corebundle.logtype.type"|trans() }}</th>
            <th>{{ "jboehm.lampcp.corebundle.logtype.message"|trans() }}</th>
            <th>{{ "all.column.actions"|trans() }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('log_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{% if entity.time %}{{ entity.time|date('d.m.Y H:i:s') }}{% endif %}</td>
                <td>{{ entity.typestring|trans() }}</td>
                <td>{{ entity.message }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-info btn-mini"
                           href="{{ path('log_show', { 'id': entity.id }) }}">{{ "button.show"|trans() }}</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}