{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.log"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.logtype.time"|trans() }}</th>
            <td>{{ entity.time|date('d.m.Y H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.logtype.type"|trans() }}</th>
            <td>{{ entity.typestring|trans() }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.logtype.message"|trans() }}</th>
            <td>{{ entity.message }}</td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn" href="{{ path('log') }}">
            {{ "button.back"|trans() }}
        </a>
    </div>
{% endblock %}