{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.ipaddress"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.ipaddresstype.alias"|trans() }}</th>
            <td>{{ entity.alias }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.ipaddresstype.ip"|trans() }}</th>
            <td>{{ entity.ip }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.ipaddresstype.port"|trans() }}</th>
            <td>{{ entity.port }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.ipaddresstype.ipv6"|trans() }}</th>
            <td>{{ entity.ipv6 }}</td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <form action="{{ path('config_ipaddress_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}

            <a class="btn" href="{{ path('config_ipaddress') }}">
                {{ "button.back"|trans() }}
            </a>

            <a class="btn btn-warning" href="{{ path('config_ipaddress_edit', { 'id': entity.id }) }}">
                {{ "button.edit"|trans() }}
            </a>

            <button class="btn btn-danger" type="submit">{{ "button.delete"|trans() }}</button>
        </form>
    </div>
{% endblock %}