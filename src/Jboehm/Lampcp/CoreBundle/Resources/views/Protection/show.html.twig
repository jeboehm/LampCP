{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.protection"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.protectiontype.path"|trans() }}</th>
            <td>{{ entity.fullpath }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.protectiontype.realm"|trans() }}</th>
            <td>{{ entity.realm }}</td>
        </tr>
        <tr>
            <th>{{ "title.page.protectionuser"|trans() }}</th>
            <td>{{ entity.protectionuser|length }}</td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <form action="{{ path('config_protection_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}

            <a class="btn" href="{{ path('config_protection') }}">
                {{ "button.back"|trans() }}
            </a>

            <a class="btn"
               href="{{ path('config_protectionuser', { 'protectionid': entity.id }) }}">{{ "title.page.protectionuser"|trans() }}</a>

            <a class="btn btn-warning" href="{{ path('config_protection_edit', { 'id': entity.id }) }}">
                {{ "button.edit"|trans() }}
            </a>

            <button class="btn btn-danger" type="submit">{{ "button.delete"|trans() }}</button>
        </form>
    </div>
{% endblock %}
