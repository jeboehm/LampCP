{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>Protection list</h1>

    <table class="records_list">
        <thead>
        <tr>
            <th>Id</th>
            <th>Path</th>
            <th>Realm</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('config_protection_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.path }}</td>
                <td>{{ entity.realm }}</td>
                <td>{{ entity.username }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('config_protection_show', { 'id': entity.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('config_protection_edit', { 'id': entity.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('config_protection_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}