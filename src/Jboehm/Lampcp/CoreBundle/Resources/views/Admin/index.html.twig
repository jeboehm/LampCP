<h1>Admin list</h1>

<table class="records_list">
    <thead>
    <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Password</th>
        <th>Registered</th>
        <th>Lastseen</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('config_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.email }}</td>
            <td>{{ entity.password }}</td>
            <td>{% if entity.registered %}{{ entity.registered|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>{% if entity.lastseen %}{{ entity.lastseen|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('config_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('config_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('config_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
