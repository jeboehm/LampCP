{% extends 'JboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.admin"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.admintype.email"|trans() }}</th>
            <td>{{ entity.email }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.admintype.registered"|trans() }}</th>
            <td>{{ entity.registered|date('d.m.Y H:i:s') }}</td>
        </tr>
        <tr>
            <th>{{ "jboehm.lampcp.corebundle.admintype.lastseen"|trans() }}</th>
            <td>{{ entity.lastseen|date('d.m.Y H:i:s') }}</td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <form action="{{ path('config_admin_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}

            <a class="btn" href="{{ path('config_admin') }}">
                {{ "button.back"|trans() }}
            </a>

            <a class="btn btn-warning" href="{{ path('config_admin_edit', { 'id': entity.id }) }}">
                {{ "button.edit"|trans() }}
            </a>

            <button class="btn btn-danger" type="submit">{{ "button.delete"|trans() }}</button>
        </form>
    </div>
{% endblock %}