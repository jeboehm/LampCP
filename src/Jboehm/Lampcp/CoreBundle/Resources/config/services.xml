<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="systemconfigservice.class">Jboehm\Lampcp\CoreBundle\Service\SystemConfigService</parameter>
        <parameter key="systemconfig.yaml">Resources/config/systemconfig.yml</parameter>
    </parameters>

    <services>
        <service id="jboehm_lampcp_core.systemconfigservice" class="%systemconfigservice.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument>%systemconfig.yaml%</argument>
        </service>
    </services>


