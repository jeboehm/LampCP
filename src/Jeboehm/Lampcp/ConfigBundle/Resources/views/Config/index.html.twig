{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <h1>{{ "title.page.systemconfig"|trans() }}</h1>

    {% for group in groups %}
        <h2>{{ ("config.title." ~ group.name)|trans() }}</h2>

        <table class="table table-striped table-bordered">
            <tbody>

            {% for entity in group.configentity %}
                <tr>
                    <th>{{ ("config." ~ group.name ~ "." ~ entity.name)|trans() }}</th>
                    <td>
                        {% if entity.type != 2 %}
                            {{ entity.value }}
                        {% else %}
                            {{ "config.password"|trans() }}
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    {% endfor %}

    <a class="btn btn-info" href="{{ path('systemconfig_edit') }}">
        {{ "button.edit"|trans() }}
    </a>
{% endblock %}
