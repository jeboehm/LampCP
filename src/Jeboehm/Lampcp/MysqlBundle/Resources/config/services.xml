<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jeboehm_lampcp_mysql.mysqladminservice.class">Jeboehm\Lampcp\MysqlBundle\Service\MysqlAdminService</parameter>
        <parameter key="jeboehm_lampcp_mysql.mysqlsynchronizerservice.class">Jeboehm\Lampcp\MysqlBundle\Service\MysqlSynchronizerService</parameter>
    </parameters>

    <services>
        <service id="jeboehm_lampcp_mysql.mysqladminservice" class="%jeboehm_lampcp_mysql.mysqladminservice.class%">
            <argument type="service" id="logger" />
        </service>

        <service id="jeboehm_lampcp_mysql.mysqlsynchronizerservice" class="%jeboehm_lampcp_mysql.mysqlsynchronizerservice.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="logger" />
            <argument type="service" id="jeboehm_lampcp_mysql.mysqladminservice" />
            <argument type="service" id="config" />
            <argument type="service" id="jeboehm_lampcp_core.cryptservice" />
        </service>
    </services>

