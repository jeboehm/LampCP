<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="jeboehm_lampcp_core.domainselector.twig">Jeboehm\Lampcp\CoreBundle\Twig\DomainselectorExtension</parameter>
        <parameter key="jeboehm_lampcp_core.cryptservice.class">Jeboehm\Lampcp\CoreBundle\Service\CryptService</parameter>
        <parameter key="jeboehm_lampcp_core.changedetectlistener.class">Jeboehm\Lampcp\CoreBundle\Listener\ChangeDetectListener</parameter>
    </parameters>

    <services>
        <service id="jeboehm_lampcp_core.changedetectlistener" class="%jeboehm_lampcp_core.changedetectlistener.class%">
            <tag name="doctrine.event_listener" event="postPersist" />
            <tag name="doctrine.event_listener" event="postUpdate" />
            <tag name="doctrine.event_listener" event="preRemove" />
        </service>

        <service id="jeboehm_lampcp_core.cryptservice" class="%jeboehm_lampcp_core.cryptservice.class%">
            <argument>%crypt%</argument>
        </service>

        <service id="jeboehm_lampcp_core.domainselector" class="%jeboehm_lampcp_core.domainselector.twig%">
            <tag name="twig.extension" />
            <argument type="service" id="doctrine.orm.entity_manager" />
            <argument type="service" id="session" />
        </service>
    </services>
</container>
