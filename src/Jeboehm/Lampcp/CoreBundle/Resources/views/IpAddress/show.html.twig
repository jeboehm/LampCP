{% extends 'JeboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.ipaddress"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.ipaddresstype.alias"|trans() }}</th>
            <td>{{ entity.alias }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.ipaddresstype.ip"|trans() }}</th>
            <td>{{ entity.ip }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.ipaddresstype.port"|trans() }}</th>
            <td>{{ entity.port }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.ipaddresstype.hasSsl"|trans() }}</th>
            <td>{{ entity.hasSsl }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.ipaddresstype.ipv6"|trans() }}</th>
            <td>{{ entity.ipv6 }}</td>
        </tr>
        </tbody>
    </table>

    {{ macros.showbuttongrp() }}
{% endblock %}
