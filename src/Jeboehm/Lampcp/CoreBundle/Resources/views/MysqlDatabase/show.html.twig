{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mysqldatabasetype.name"|trans() }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mysqldatabasetype.comment"|trans() }}</th>
            <td>{{ entity.comment }}</td>
        </tr>
        </tbody>
    </table>

    {{ macros.showbuttongrp(path("config_mysqldatabase"), path("config_mysqldatabase_edit", { 'entity' : entity.id }), path("config_mysqldatabase_delete", { 'entity' : entity.id })) }}
{% endblock %}

{% block title %}
    {{ "show.page.mysqldatabase"|trans() }}
{% endblock %}
