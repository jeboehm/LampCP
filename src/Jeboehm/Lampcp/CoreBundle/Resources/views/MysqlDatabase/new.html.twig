{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <h1>{{ "create.page.mysqldatabase"|trans() }}</h1>

    <form action="{{ path('config_mysqldatabase_create') }}"
          class="form-horizontal" method="post" {{ form_enctype(form) }}>

        {{ form_row(form.name, {'form_type': 'horizontal'}) }}
        {{ form_row(form.comment, {'form_type': 'horizontal'}) }}
        {{ form_row(form.password.first, {'form_type': 'horizontal'}) }}
        {{ form_row(form.password.second, {'form_type': 'horizontal'}) }}

        {{ form_rest(form) }}

        {{ macros.formbuttongrp(path('config_mysqldatabase')) }}
    </form>
{% endblock %}
