{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <h1>{{ "edit.page.pathoption"|trans() }}</h1>

    <form action="{{ path('config_pathoption_update', { 'id': entity.id }) }}"
          class="form-horizontal" method="post" {{ form_enctype(edit_form) }}>

        {{ form_row(edit_form.path, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.hasDirectoryListing, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.error404, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.error403, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.error500, {'form_type': 'horizontal'}) }}

        {{ form_rest(edit_form) }}

        {{ macros.formbuttongrp(path('config_pathoption'), path('config_pathoption_delete', { 'id': entity.id })) }}
    </form>
{% endblock %}
