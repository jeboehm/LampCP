{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <h1>{{ "title.page.status"|trans() }}</h1>

    <h2>{{ "status.title.cronjobs"|trans() }}</h2>
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <th>{{ "status.column.name"|trans() }}</th>
            <th>{{ "status.column.lastrun"|trans() }}</th>
        </tr>
        </thead>

        <tbody>
        {% for cronjob in cronjobs %}
        <tr>
            <td>{{ cronjob.id }}</td>
            <td>{{ cronjob.name }}</td>
            <td>{{ cronjob.lastrun|date("d.m.Y H:i") }}</td>
        </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
