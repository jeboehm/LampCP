{% extends 'JeboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "title.page.mailaccount"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <th>{{ "jeboehm.lampcp.corebundle.mailaccounttype.username"|trans() }}</th>
            <th>{{ "jeboehm.lampcp.corebundle.mailaccounttype.quota"|trans() }}</th>
            <th>{{ "jeboehm.lampcp.corebundle.mailaccounttype.enabled"|trans() }}</th>
            <th>{{ "all.column.actions"|trans() }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('config_mailaccount_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.username }}</td>
                <td>{{ entity.quotahumanreadable }}</td>
                <td>{{ entity.enabled }}</td>
                <td>
                    <div class="btn-group">
                        <a class="btn btn-info btn-mini"
                           href="{{ path('config_mailaccount_show', { 'id': entity.id }) }}">{{ "button.show"|trans() }}</a>
                        <a class="btn btn-warning btn-mini"
                           href="{{ path('config_mailaccount_edit', { 'id': entity.id }) }}">{{ "button.edit"|trans() }}</a>
                        <a class="btn btn-mini"
                           href="{{ path('config_mailaddress', { 'mailaccountid': entity.id }) }}">{{ "title.page.mailaddress"|trans() }}</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('config_mailaccount_new') }}">
        {{ "button.create"|trans() }}
    </a>
{% endblock %}
