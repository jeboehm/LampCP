{% extends 'JeboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.mailaccount"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mailaccounttype.username"|trans() }}</th>
            <td>{{ entity.username }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mailaccounttype.quota"|trans() }}</th>
            <td>{{ entity.quotahumanreadable }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mailaccounttype.enabled"|trans() }}</th>
            <td>{{ entity.enabled }}</td>
        </tr>
        <tr>
            <th>{{ "title.page.mailaddress"|trans() }}</th>
            <td>{{ entity.mailaddress|length }}</td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <form action="{{ path('config_mailaccount_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}

            <a class="btn" href="{{ path('config_mailaccount') }}">
                {{ "button.back"|trans() }}
            </a>

            <a class="btn"
               href="{{ path('config_mailaddress', { 'mailaccountid': entity.id }) }}">{{ "title.page.mailaddress"|trans() }}</a>

            <a class="btn btn-warning" href="{{ path('config_mailaccount_edit', { 'id': entity.id }) }}">
                {{ "button.edit"|trans() }}
            </a>

            <button class="btn btn-danger" type="submit">{{ "button.delete"|trans() }}</button>
        </form>
    </div>
{% endblock %}
