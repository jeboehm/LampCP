{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <h1>{{ "edit.page.protectionuser"|trans() }}</h1>

    <form action="{{ path('config_protectionuser_update', { 'entity': entity.id }) }}"
          class="form-horizontal" method="post" {{ form_enctype(edit_form) }}>

        {{ form_row(edit_form.username, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.password.first, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.password.second, {'form_type': 'horizontal'}) }}

        {{ form_rest(edit_form) }}

        {{ macros.formbuttongrp(path('config_protectionuser', { 'protection': entity.protection.id }), path('config_protectionuser_delete', { 'entity': entity.id })) }}
    </form>
{% endblock %}
