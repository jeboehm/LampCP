{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.protection"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.protectiontype.path"|trans() }}</th>
            <td>{{ entity.fullpath }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.protectiontype.realm"|trans() }}</th>
            <td>{{ entity.realm }}</td>
        </tr>
        <tr>
            <th>{{ "title.page.protectionuser"|trans() }}</th>
            <td>{{ entity.protectionuser|length }}</td>
        </tr>
        </tbody>
    </table>

    {{ macros.showbuttongrp(path("config_protection"), path("config_protection_edit", { id : entity.id }), path("config_protection_delete", { id : entity.id })) }}
    <a class="btn"
       href="{{ path('config_protectionuser', { 'protectionid': entity.id }) }}">{{ "title.page.protectionuser"|trans() }}</a>
{% endblock %}
