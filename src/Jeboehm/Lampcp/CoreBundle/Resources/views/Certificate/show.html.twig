{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.certificatetype.name"|trans() }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ "title.page.domain"|trans() }}</th>
            <td>
                <ul>
                    {% for domain in entity.domain %}
                        <li>
                            {{ domain.domain }}
                        </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>{{ "title.page.subdomain"|trans() }}</th>
            <td>
                <ul>
                    {% for subdomain in entity.subdomain %}
                        <li>
                            {{ subdomain.fulldomain }}
                        </li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.certificatetype.CertificateFile"|trans() }}</th>
            <td>
                <pre>{{ macros.excerpt(entity.certificatefile, 150) }}</pre>
            </td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.certificatetype.CertificateKeyFile"|trans() }}</th>
            <td>
                <pre>{{ macros.excerpt(entity.certificatekeyfile, 150) }}</pre>
            </td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.certificatetype.CertificateChainFile"|trans() }}</th>
            <td>
                <pre>{{ macros.excerpt(entity.certificatechainfile, 150) }}</pre>
            </td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.certificatetype.CACertificateFile"|trans() }}</th>
            <td>
                <pre>{{ macros.excerpt(entity.cacertificatefile, 150) }}</pre>
            </td>
        </tr>
        </tbody>
    </table>

    {{ macros.showbuttongrp(path("config_certificate"), path("config_certificate_edit", { 'entity' : entity.id }), path("config_certificate_delete", { 'entity' : entity.id })) }}
{% endblock %}

{% block title %}
    {{ "show.page.certificate"|trans() }}
{% endblock %}
