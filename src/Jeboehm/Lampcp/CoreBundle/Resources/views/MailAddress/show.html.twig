{% extends 'JeboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.mailaddress"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mailaddresstype.address"|trans() }}</th>
            <td>{{ entity.fulladdress }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mailaddresstype.mailforward"|trans() }}</th>
            <td>
                {% if entity.mailforward|length > 0 %}
                    <ul>
                        {% for forward in entity.mailforward %}
                            <li>{{ forward.target }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    0
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <form action="{{ path('config_mailaddress_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}

            <a class="btn" href="{{ path('config_mailaddress') }}">
                {{ "button.back"|trans() }}
            </a>

            <a class="btn btn-warning" href="{{ path('config_mailaddress_edit', { 'id': entity.id }) }}">
                {{ "button.edit"|trans() }}
            </a>

            <button class="btn btn-danger" type="submit">{{ "button.delete"|trans() }}</button>
        </form>
    </div>
{% endblock %}
