{% extends 'JeboehmLampcpCoreBundle::layout.html.twig' %}

{% block content %}
    <h1>{{ "show.page.mailaddress"|trans() }}</h1>

    <table class="table table-striped table-bordered">
        <tbody>
        <tr>
            <th>{{ "all.column.id"|trans() }}</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mailaddresstype.address"|trans() }}</th>
            <td>{{ entity.fulladdress }}</td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mailaddresstype.mailforward"|trans() }}</th>
            <td>
                {% if entity.mailforward|length > 0 %}
                    <ul>
                        {% for forward in entity.mailforward %}
                            <li>{{ forward.target }}</li>
                        {% endfor %}
                    </ul>
                {% else %}
                    0
                {% endif %}
            </td>
        </tr>
        <tr>
            <th>{{ "jeboehm.lampcp.corebundle.mailaddresstype.mailaccount"|trans() }}</th>
            <td>
                {{ entity.mailaccount.enabled }}
            </td>
        </tr>
        </tbody>
    </table>

    {{ macros.showbuttongrp(path("config_mailaddress"), path("config_mailaddress_edit", { id : entity.id }), path("config_mailaddress_delete", { id : entity.id })) }}
{% endblock %}
