{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <form action="{{ path('config_admin_update', { 'entity': entity.id }) }}"
          class="form-horizontal" method="post" autocomplete="off" {{ form_enctype(edit_form) }}>

        {{ form_row(edit_form.username, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.email, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.plainPassword, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.roles, {'form_type': 'horizontal'}) }}
        {{ form_row(edit_form.enabled, {'form_type': 'horizontal'}) }}

        {{ form_rest(edit_form) }}

        {{ macros.formbuttongrp(path('config_admin'), path('config_admin_delete', { 'entity': entity.id })) }}
    </form>
{% endblock %}

{% block title %}
    {{ "edit.page.admin"|trans() }}
{% endblock %}
