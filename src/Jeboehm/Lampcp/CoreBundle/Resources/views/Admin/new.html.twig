{% extends 'JeboehmLampcpCoreBundle:Base:layout.html.twig' %}

{% block content %}
    <h1>{{ "create.page.admin"|trans() }}</h1>

    <form action="{{ path('config_admin_create') }}" class="form-horizontal"
          method="post" {{ form_enctype(form) }}>

        {{ form_row(form.username, {'form_type': 'horizontal'}) }}
        {{ form_row(form.email, {'form_type': 'horizontal'}) }}
        {{ form_row(form.plainPassword, {'form_type': 'horizontal'}) }}
        {{ form_row(form.enabled, {'form_type': 'horizontal'}) }}

        {{ form_rest(form) }}

        {{ macros.formbuttongrp(path('config_admin')) }}
    </form>
{% endblock %}
